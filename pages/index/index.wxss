}
.section{
  /* position: absolute; */
  border-radius:50rpx;
  width: 80%;
  left: 10%;
  background-color: white;
  display: -webkit-flex;
  
}
.section>input{
  font-size: 32rpx;
  color: gray;
  border-radius:50rpx;
}
.box {
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  margin:40rpx 0;
  /* position: relative; */
}

.column {
  flex-basis: 100%;
  display: flex;
  justify-content: space-between;
  text-align: center;
}

.item {
  padding: 20rpx 20rpx 0 20rpx;
 
  flex: 1;
}

.itemImg {
  width: auto;
  height: 100rpx;
  overflow: hidden;
  position: relative;
}

.itemImg>image {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
}

.itemName {
  font-size: 28rpx;
  line-height: 24rpx;
  color: #333;
  padding: 20rpx 0px;
  /* margin-top: 8px; */
}

.page-section-spacing {
  padding: 20rpx;
}

.scroll-view_H {
  white-space: nowrap;
}

.scroll-view-item_H {
  display: inline-block;
  width: 40%;
  height: 240rpx;
}

.scroll-view-item_H.demo-text-1 {
  border: 1px solid red;
}

.scroll-view-item_H.demo-text-2 {
  border: 1px solid #333;
}

.scroll-view-item_H.demo-text-3 {
  border: 1px solid #666;
}

