.text_box{
  width:100%;
  height:60rpx;
  line-height:60rpx;
  background:rgba(255, 255, 255, 0.6);
  position: absolute;
  bottom:0;
  padding:0 16rpx;
  box-sizing: border-box;
  color:#f36066;
  font-size:24rpx;
}
.text_box_01{
  color:#333333;
  font-size:28rpx;
