<!-- header-->
<view class='meHeader'>
  <image src='../../images/icon_15.png' class='backImg'></image>
  <view class='userInfo'>
    <image background-size="cover" class='userInfo-avatar' src='{{userInfo.avatarUrl}}' style='width:160rpx;height:160rpx'></image>
  </view>
  <view class='userInfoName'> <text >{{userInfo.nickName}}</text></view>
  
</view>
<view class='order'>
  <view class='choose' bindtap='seeOrder'>
    <text>我的订单</text>
    <image src='../../images/icon-right.png' class='chooseImg'></image>
    <text class='chooseText'>查看所有已购订单</text>
  </view>
