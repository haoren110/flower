  <view class='box'>
  <view class="column">

    <view class="item">
      <navigator url='../productList/productList?currentTab=0'>
        <view class="itemImg">
          <image  src='../../images/icon_16.png' ></image>
        </view>
      </navigator>
      <view class="itemName">待付款</view>
    </view>
    <view class="item">
      <navigator url='../productList/productList?currentTab=1'>
        <view class="itemImg">
          <image  src='../../images/icon_17.png' ></image>
        </view>
      </navigator>
      <view class="itemName">待发货</view>
    </view>

    <view class="item">
      <navigator url='../productList/productList?currentTab=2'>
        <view class="itemImg">
          <image src='../../images/icon_18.png' />
        </view>
      </navigator>
      <view class="itemName">已收货</view>
    </view>
  </view>
</view>
</view>

<view class='choose' bindtap='address'>
  <text class='addressText'>我的收货地址</text>
  <image src='../../images/icon-right.png' class='chooseImg'></image>
  <image src='../../images/icon_19.png' class='addressImg'></image>
</view>
<view class='choose' bindtap='introduction'>
  <text class='addressText'>关于相逢</text>
  <image src='../../images/icon-right.png' class='chooseImg'></image>
  <image src='../../images/icon_20.png' class='addressImg'></image>
</view>
<view class='choose' bindtap='score'>
  <text class='addressText'>我的积分</text>
  <image src='../../images/icon-right.png' class='chooseImg'></image>
  <image src='../../images/icon_21.png' class='addressImg'></image>
</view>

